<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presenter.activity.MainActivity"
    android:background="@drawable/tree_fone"
    android:id="@+id/glavniy">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fone">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_marginTop="24dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5">
            <FrameLayout
                android:layout_marginTop="16dp"
                android:layout_gravity="start|top"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="16dp"
                android:layout_height="40dp"
                android:background="@drawable/time_ic_ramka">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="moves 0"
                    android:id="@+id/count"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/puzzle_15"
                android:textSize="45sp"
                android:textColor="#F3960E"
                android:textStyle="bold"
                android:shadowRadius="15"
                android:shadowColor="@color/black"
                android:layout_marginBottom="20dp"/>

                <FrameLayout
                    android:layout_gravity="end|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/time_ic_ramka">
                    <Chronometer
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/time"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:format="Time - %s"
                        android:textStyle="bold" />
                </FrameLayout>


        </FrameLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:id="@+id/puzzle">
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="8dp"
                android:padding="8dp"
                app:layout_constraintDimensionRatio="1:1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn1"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn2"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn3"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn4"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn5"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn6"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn7"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn8"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn9"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn10"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn11"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn12"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn13"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn14"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn15"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn16"
                        style="@style/Button_Puzzle_15"
                        android:layout_weight="1"
                        android:background="@drawable/puzzle" />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/menu"
                android:layout_gravity="bottom|end"
                android:layout_margin="20dp"
                android:clickable="true"
                android:id="@+id/menu"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/zvuk"
                android:layout_gravity="top|end"
                android:layout_margin="20dp"
                android:clickable="true"
                android:id="@+id/sound"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</FrameLayout>